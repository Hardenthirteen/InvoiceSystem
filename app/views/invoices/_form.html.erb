  <p>
    <%= f.label :invoiceNumber %><br>
    <%= f.text_field :invoiceNumber %>
  </p>

  <!-- 开票人姓名 -->
  <p>
    <%= f.label :applicatName %><br>
    <%= f.text_field :applicatName %>
  </p>

  <div>
    <%= f.submit %>
  </div>
<% end %>