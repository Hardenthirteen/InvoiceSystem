<%= form_for :invoice_info do |f| %>

  <% if @invoice_info.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@invoice_info.errors.count, "error") %> prohibited
        this invoice from being saved:
      </h2>
      <ul>
        <% @invoice_info.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- 发票抬头 -->
  <p>
    <%= f.label :invoiceTitle %><br>
